<!DOCTYPE html>
<html>
  <head>
    <%- include ../common/meta.ejs %>
    <title>军事理论教学</title>
    <link rel='stylesheet' href='css/admin/jsll/list.css' >
  </head>
  <body>
    <%- include ../common/header.ejs %>
    <div class="container">
      <div class="fpanel">
        <ul class="nav nav-tabs sub-nav" style="margin-top:15px;">
          <li data-type="1" data-key="政策" class="active"><a href="admin/jsll/list/outline">法规</a></li>
          <li data-type="2" data-key="教材"><a href="admin/jsll/list/tbook">教材</a></li>
          <li data-type="3" data-key="资料"><a href="admin/jsll/list/tplan">教案</a></li>
          <li data-type="4" data-key="课件"><a href="admin/jsll/list/ppt">课件</a></li>

          <div class="tool-bar">
            <span id="btn_search" class="add btn btn-primary" >添加</span>
          </div>
        </ul>
        <div id="menu_panel" >
          <div class="sidebar">
            <ul id="menu_list" class="memu-panel"></ul>  
          </div>
          <div class="main">
            <div class="info-title"><label>标题</label><input id="content_title" placeholder="输入标题"></div>
            <div class="info-content" >
              <textarea class="editor-area" id="content" placeholder="输入正文" autofocus></textarea>
              <div class="btn-wrapper" >
                <span id="btn_commit" class="btn btn-primary">提交</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script type="text/template" id="menu_tpl">
      {@each list as obj}
      <li data-id="${obj.id}">
        <div class="btn-group">
          <button type="button" class="btn btn-info" data-id="${obj.id}">${obj.title}</button>
          <button type="button" class="btn btn-primary del" data-id="${obj.id}">
            <span class="glyphicon glyphicon-trash"></span>
          </button>
        </div>
      </li>
      {@/each}
    </script>
    <script type="text/javascript" src="js/admin/jsll/outline.js"></script>
    <script>
      $(document).ready(function() {
        $('#navfouce .jsll').addClass('current');
        moka.admin.jsll.outline.init();
      });
    </script>
  </body>
</html>